@model CoverType

<form method="post" asp-action="DeletePOST">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Șterge Tipul de copertă</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name">Nume</label>
            <input asp-for="Name" disabled class="form-control" />
        </div>   
        <button type="submit" class="btn btn-danger" style="width:150px">Șterge</button>
        <a asp-controller="CoverType" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Înapoi la listă
        </a>
    </div>

</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial"></partial>

    }
}