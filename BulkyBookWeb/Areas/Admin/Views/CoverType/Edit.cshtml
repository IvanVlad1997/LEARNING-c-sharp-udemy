@model CoverType

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Editează Tipul de copertă</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="Name">Nume</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>    
        <button type="submit" class="btn btn-primary" style="width:150px">Editează</button>
        <a asp-controller="CoverType" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Înapoi la listă
        </a>
    </div>

</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial"></partial>

    }
}